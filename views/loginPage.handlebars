<h4 class="loginHeader">LOGIN</h4>


<div class="row container">
	<div class="col s12">
		<form action="/api/auth/login" method="POST">
			<div class="row">
				<div class="input-field">
					<input required name="username" id="username" type="text"
						class="validate">
					<label for="username">Username</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field">
					<input required name="password" id="password" type="password"
						class="validate">
					<label for="password">Password</label>
				</div>
			</div>
			<div class="row">
				<div class="col s6 login-bottom">
					<button type="submit" id="submit"
						class="waves-effect waves-light btn-small"><i
							class="material-icons right">send</i>Submit</button>
				</div>
				<div class="col s6 registerDiv">
					<p>No Account?</p>
					<a href="/register">RegisterNow</a>
				</div>
			</div>
		</form>
	</div>

</div>