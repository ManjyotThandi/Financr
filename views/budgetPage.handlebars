<h1 style="text-align: center;">ACTIVE BUDGET</h1>
{{#if status}}
{{else}}
<div class="row" id="alert_box">
  <div class="col s12 m12">
    <div class="card red darken-1">
      <div class="row">
        <div class="col s12 m10">
          <div class="card-content white-text">
            <p>You are currently over budget!</p>
        </div>
      </div>
      <div class="col s12 m2">
        <i class="material-icons" id="alert_close" aria-hidden="true">close</i>
      </div>
    </div>
   </div>
  </div>
</div>
{{/if}}
<div class="row">

  <div class="col s6">
    <form action="/api/add/budget" onsubmit="return validationBudget()" method="POST" class="form-style-9">
      <ul>
        <li>
          <input type="text" name="Amount" id ="amount" class="field-style field-split align-left"
            placeholder="Amount" />
        </li>
        <li>
          <input type="text" placeholder="From Date.." name="fromDate" id="fromDate" class="datepicker">
          <input type="text" name="toDate" placeholder="To Date" id="toDate" class="datepicker">
        </li>
        <li>
          <input type="submit" value="Add Budget" />
        </li>
      </ul>
    </form>
  </div>
  <div class="col s6">
    <table>
      <thead>
        <tr>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Starting Budget</th>
          <th>Budget Left</th>
        </tr>
      </thead>

      <tbody>
        {{#each budget}}
        <tr>
          <td>{{fromDate}}</td>
          <td>{{toDate}}</td>
          <td>{{budgetAmt}}</td>
          {{/each}}
          <td>{{budgetLeft}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<script src="/js/budget.js"></script>