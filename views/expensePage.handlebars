<h1 style="text-align: center;">Expenses</h1>
<div class="row">

  <div class="col s6">
    <form action="/api/add/expense" method="POST" class="form-style-9">
      <ul>
        <li>
          <input type="text" name="Address" class="field-style field-split align-left"
            placeholder="Address" />
          <input type="text" name="Country" class="field-style field-split align-right"
            placeholder="Country" />

        </li>
        <li>
          <input type="text" name="Amount" class="field-style field-split align-left"
            placeholder="Amount" />
          <input type="text" name="Category" class="field-style field-split align-right"
            placeholder="Category" />
        </li>
        <li>
          <input type="text" name="itemName" class="field-style field-full align-none"
            placeholder="Name" />
        </li>
        <li>
          <input type="submit" value="Send Message" />
        </li>
      </ul>
    </form>
  </div>
  <div class="col s6">
    <table>
      <thead>
        <tr>
          <th>Amount Spent</th>
          <th>Item Name</th>
          <th>Item Category</th>
        </tr>
      </thead>

      <tbody>
        {{#each amount}}
        <tr>
          <td>{{amount}}</td>
          <td>{{category}}</td>
          <td>{{itemName}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<script src="/js/expense.js"></script>